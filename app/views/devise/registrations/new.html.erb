<div class="screen center-child">
  <div class="center form-wrap registration">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: "form-text", required: true, autofocus: true, autocomplete: "username" %>
      </div>
      <div class="field form-group">
        <%= f.label :fullname %><br />
        <%= f.text_field :fullname, class: "form-text", required: true, autofocus: true, autocomplete: "fullname" %>
      </div>
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-text", required: true, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-text", autocomplete: "new-password" %>
      </div>
      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-text", autocomplete: "new-password" %>
      </div>
      <div class="field ">
        <%= f.label :photo %>
        <div><%= f.file_field :photo, required: true, input_html: { autocomplete: "photo" }, direct_upload: true %> </div>
      </div>
      <div class="field">
        <%= f.label :cover_image %>
        <div><%= f.file_field :cover_image, required: true, input_html: { autocomplete: "cover_image" }, direct_upload: true %> </div>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "block-btn blue" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
