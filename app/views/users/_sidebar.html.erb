<div class="bg-dark text-light h-100">
  <div class="d-flex align-items-center p-3">
    <div class="profile-pic"></div>
    <div class="current_user_name ms-3"><%= @user.username %></div>
  </div>
  <div class="d-flex text-center follow-count">
    <div class="flex-1">
      <div><%= @following.length %></div>
      <div>FOLLOWING</div>
    </div>
    <div class="flex-1">
      <div><%= @followers.length %></div>
      <div>FOLLOWERS</div>
    </div>
  </div>
  <ul class="aside-links">
    <li>
      <i class="fa fa-home" aria-hidden="true"></i>
      <%= link_to "Home", root_path, class: "aside-link home" %>
    </li>
    <li>
      <i class="fa fa-user" aria-hidden="true"></i>
      <a class="aside-link profile" href="#">Profile</a>
    </li>
    <li>
      <i class="fa fa-home" aria-hidden="true"></i>
      <%=link_to 'Logout', destroy_user_session_path, method: :delete, class: "aside-link logout" %>
    </li>
  </ul>
</div>