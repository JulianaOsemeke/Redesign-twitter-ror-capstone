<div class="container-fluid">
  <div class="row">
    <aside class="col-3 d-flex">
      <%= render partial: "users/sidebar", local: { following: @following, followers: @followers } %>
    </aside>
    <div class="col-9">
      <%= render "users/header" %>
      <div class="container-flex">
        <div class="row">
          <main class="col-8">
            <div class="cover-picture-wrap">
             <%= image_tag(@user.cover_image) %>
            </div>
            <div class="opinion-form-wrap">
              <h3>Opinion</h3>
              <%= form_with model: @opinion do |form| %>
                <%= form.text_field :opinion %>
              <% end %>
            </div>
            <div class="opinions-list bg-light p3">
              <h3 class="opinions-header h4">Recent Opinions</h3>
              <%= render_user_opinions @user_opinions %>
            </div>
          </main>
          <aside class="col-4 h-100">
            <div class="text-align-center p-3">
              <div class="d-flex justify-content-center"><div class="profile-pic xlg"><%= image_tag(current_user.photo) %></div></div>
              <div class="name-wrap">
                <div class="full-name"><%= @user.fullname %></div>
                <div class="at-name"><%= at_name @user %></div>
              </div>
            </div>
            <div class="d-flex text-center follow-count sm">
              <div class="flex-1 cell">
                <div><%= @user_opinions.length %></div>
                <div class="label">OPINIONS</div>
              </div>
              <div class="flex-1 cell">
                <div><%= @following.length %></div>
                <div class="label">FOLLOWING</div>
              </div>
              <div class="flex-1 cell">
                <div><%= @followers.length %></div>
                <div class="label">FOLLOWERS</div>
              </div>
            </div>
            <h3 class="mt-3 h4">Followers</h3>
            <div>
              <%= user_followers(@followers) %>
            </div>
          </aside>
        </div>
      </div>
      <footer></footer>
    </div>
  </div>
</div>
