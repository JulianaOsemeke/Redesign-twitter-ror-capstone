<!DOCTYPE html>
<html>
  <head>
    <title>Capstone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       
       <%#= image_tag(current_user.photo)  %>
       <%#= image_tag(current_user.cover_image) %>
       <% if user_signed_in? %>
       <%=link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button' %>
       <%= link_to "New Opinion", new_opinion_path, class:"button is-info" %> 
        <p class="control"> <%= link_to current_user.username, edit_user_registration_path, class: "button is-info" %> </p>
         <% else %>
        <%= link_to 'Sign In', new_user_session_path, class: "button is-info" %> 
        <%= link_to 'Sign Up', new_user_registration_path, class: "button is-info" %> 
        <% end %>
    <%= yield %>
  </body>
</html>
